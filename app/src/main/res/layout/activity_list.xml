<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/historyItemNameAndAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"
        android:text="Teszt követelmény                             Fontos"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/historyItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/historyItemNameAndAmount"
        android:layout_below="@+id/historyItemNameAndAmount"
        android:text="2018.04.07. 12:00" />

    <Button
        android:id="@+id/loginButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        android:background="@color/colorPrimary"
        android:elevation="1dp"
        android:text="Új hozzáadása" />
</RelativeLayout>