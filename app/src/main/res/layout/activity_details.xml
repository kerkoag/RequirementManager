<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Cím"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/priority"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Prioritás"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/state"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/priority"
        android:ems="10"
        android:enabled="false"
        android:hint="Állapot"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/recorded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:hint="Rögzítve"
        android:inputType="number" />

    <EditText
        android:id="@+id/assingto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="211dp"
        android:ems="10"
        android:hint="Hozzárendelt személy"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="119dp"
        android:ems="10"
        android:hint="Leírás"
        android:inputType="textMultiLine" />



    <Button
        android:id="@+id/saveRequirementButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:layout_marginStart="48dp"
        android:background="@color/colorPrimary"
        android:elevation="1dp"
        android:text="Mentés" />

    <Button
        android:id="@+id/deleteRequirementButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/saveRequirementButton"
        android:layout_marginEnd="48dp"
        android:background="@color/colorPrimary"
        android:elevation="1dp"
        android:text="Törlés" />
</RelativeLayout>